<odoo>
  <data>
    <!-- explicit list view definition -->
    <!-- Definimos cÃ³mo es la vista explÃ­cita de la listas-->
    <record model="ir.ui.view" id="gestion_tareas.list">
      <field name="name">gestion_tareas list</field>
      <field name="model">gestion_tareas.gestion_tareas</field>
      <field name="arch" type="xml">
        <list>
          <field name="tarea" />
          <field name="prioridad" />
          <field name="urgente" />
          <field name="realizada" />
        </list>
      </field>
    </record>
    <!-- actions opening views on models -->
    <!-- Acciones al abrir las vistas en los modelos
    https://www.odoo.com/documentation/17.0/developer/reference/addons/actions.html
  -->
    <record model="ir.actions.act_window" id="gestion_tareas.action_window">
      <field name="name">Listado de tareas pendientes</field>
      <field name="res_model">gestion_tareas.gestion_tareas</field>
      <field name="view_mode">list,form</field>
    </record>
    <!-- Top menu item -->
    <menuitem name="Listado de tareas" id="gestion_tareas.menu_root" />
    <!-- menu categories -->
    <menuitem name="Opciones Lista Tareas" id="gestion_tareas.menu_1"
      parent="gestion_tareas.menu_root" />
    <!-- actions -->
    <menuitem name="Mostrar lista" id="gestion_tareas.menu_1_list"
      parent="gestion_tareas.menu_1"
      action="gestion_tareas.action_window" />
  </data>
</odoo>